{
  "name": "@transmute/element-api",
  "version": "0.0.0",
  "description": "Cloud Functions for Element DID",
  "author": "Orie Steele",
  "license": "Apache-2.0",
  "scripts": {
    "services:start": "npm run env:create:local",
    "env:create:local": "node ./scripts/env_to_json_config.js local ../../example.env ./local.runtimeconfig.json && ./scripts/update_runtimeconfig_contract.sh ./local.runtimeconfig.json",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "pretest": "lerna run services:start",
    "test": "NODE_ENV='testing' jest --runInBand",
    "precoverage": "lerna run services:start",
    "coverage": "jest --coverage",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell --port=5002",
    "start": "NODE_ENV='development' npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "^0.10.2",
    "@transmute/element-lib": "0.0.2-0",
    "base64url": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "firebase": "^6.2.0",
    "firebase-admin": "^8.1.0",
    "firebase-functions": "^3.0.2",
    "morgan": "^1.9.1",
    "swagger-jsdoc": "^3.2.6",
    "swagger-ui-express": "^4.0.2",
    "tar": ">=2.2.2",
    "winston": "^3.1.0"
  },
  "private": true,
  "engines": {
    "node": "8"
  },
  "devDependencies": {
    "dotenv": "^7.0.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "setupFiles": [
      "./src/setupFiles.js"
    ],
    "testPathIgnorePatterns": [
      "__fixtures__",
      "./src/__tests__/box"
    ]
  }
}
