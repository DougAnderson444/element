{
  "name": "@transmute/element-core",
  "version": "0.4.0",
  "description": "A TypeScript Library for Sidetree Ethereum Methods.",
  "keywords": [
    "sidetree",
    "did",
    "decentralized",
    "identity",
    "cryptography"
  ],
  "main": "./dist/bundles/index.umd.js",
  "module": "./dist/esm5/index.js",
  "es2015": "./dist/esm2015/index.js",
  "typings": "./dist/types/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/decentralized-identity/element"
  },
  "author": "Orie Steele <orie@transmute.industries>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.5",
    "npm": ">=6.0",
    "yarn": "^1.0"
  },
  "scripts": {
    "cleanup": "shx rm -rf dist docs",
    "prebuild": "npm run cleanup && npm run verify",
    "build": "tsc --project ./tsconfig.build.json && tsc --project ./tsconfig.build.json --target es2018 --outDir dist/esm2015 && rollup -c config/rollup.config.js && rollup -c config/rollup.config.js --environment NODE_ENV:production && node scripts/build",
    "postbuild": "npm run size",
    "docs": "typedoc -p . --theme minimal --target 'es6' --tsconfig ./tsconfig.json --exclude  'src/**/*.spec.ts,src/**/__fixtures__/*' --out docs src/",
    "test": "jest -c ./config/jest.config.js",
    "test:watch": "npm t -- --watch",
    "coverage": "npm t -- --coverage",
    "test:ci": "npm t -- --ci",
    "validate-js": "tsc -p ./config && tsc -p ./scripts",
    "verify": "npm run validate-js && npm run style && npm run test:ci",
    "commit": "git-cz",
    "style": "npm run format -- --list-different && npm run lint",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "format": "prettier \"**/*.{ts,js,css,scss,sass,less}\"",
    "format:fix": "npm run format -- --write",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint:fix": "npm run lint -- --fix",
    "package:preview": "npm pack --dry-run",
    "size": "node scripts/file-size ./dist/bundles/index.esm.min.js ./dist/bundles/index.umd.min.js"
  },
  "peerDependencies": {
    "@transmute/did-wallet": "0.0.0-4",
    "assert": "2.0.0",
    "bip39": "3.0.2",
    "buffer": "5.2.1",
    "crypto": "1.0.1",
    "fs": "0.0.1-security",
    "hdkey": "1.1.1",
    "path": "0.12.7",
    "secp256k1": "3.7.1",
    "tslib": ">=1.9.0",
    "util": "0.12.1"
  },
  "dependencies": {
    "@transmute/did-wallet": "0.0.0-4",
    "bip39": "3.0.2",
    "hdkey": "1.1.1"
  },
  "devDependencies": {
    "@types/hdkey": "0.7.0",
    "@types/jest": "23.3.10",
    "@types/json5": "0.0.30",
    "@types/node": "8.10.*",
    "@types/prettier": "1.15.2",
    "@types/secp256k1": "3.5.0",
    "@types/webpack-config-utils": "2.3.0",
    "brotli-size": "0.0.3",
    "commitizen": "3.0.5",
    "cross-var": "1.1.0",
    "cz-conventional-changelog": "2.1.0",
    "gzip-size": "5.0.0",
    "jest": "23.6.0",
    "jest-watch-typeahead": "0.2.0",
    "json5": "2.1.0",
    "kleur": "3.0.1",
    "prettier": "1.18.2",
    "pretty-bytes": "5.1.0",
    "rollup": "1.17.0",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-uglify": "6.0.2",
    "shx": "0.3.2",
    "standard-version": "4.4.0",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.2.12",
    "typedoc": "0.15.0",
    "typescript": "3.2.2",
    "typescript-tslint-plugin": "0.2.1",
    "webpack-config-utils": "2.3.1"
  }
}
