{
  "name": "@transmute/element-lib",
  "version": "0.0.2-0",
  "description": "Experimental Sidetree Protocol based DID Method `elem` with Ethereum and IPFS",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentralized-identity/element.git"
  },
  "scripts": {
    "services:start": "./scripts/start_services.sh",
    "services:stop": "./scripts/stop_services.sh",
    "ipfs:start": "./scripts/ipfs/start.sh",
    "ipfs:stop": "./scripts/ipfs/stop.sh",
    "ganache:start": "./scripts/ganache/start.sh",
    "ganache:stop": "./scripts/ganache/stop.sh",
    "clean": "rm -rf element-pouchdb*",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "pretest": "npm run services:start",
    "test": "jest --runInBand ",
    "posttest": "npm run clean",
    "coverage": "jest --runInBand --coverage ",
    "postcoverage": "npm run clean && npm run services:stop",
    "test:contracts": "truffle test",
    "pretest:contracts": "npm run services:start",
    "contracts:migrate:dev": "truffle migrate --network development --reset",
    "contracts:migrate:ropsten": "truffle migrate --network ropsten"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./test",
      "__fixtures__"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "base64url": "^3.0.1",
    "bip39": "^2.5.0",
    "did-resolver": "0.0.6",
    "ethereumjs-util": "^6.1.0",
    "fast-json-patch": "^2.0.7",
    "hdkey": "^1.1.1",
    "ipfs-api": "^26.1.2",
    "ipfs-http-client": "^30.1.1",
    "ipfs-unixfs": "^0.1.16",
    "ipld-dag-pb": "^0.15.3",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.11",
    "merkle-tools": "^1.4.0",
    "moment": "^2.24.0",
    "multihashes": "^0.4.14",
    "nanobus": "^4.4.0",
    "node-localstorage": "^1.3.1",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "pouchdb-upsert": "^2.2.0",
    "secp256k1": "^3.6.2",
    "truffle-contract": "^4.0.17",
    "truffle-hdwallet-provider": "^1.0.5",
    "web3": "1.0.0-beta.36",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "dotenv": "^7.0.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^4.1.0",
    "ganache-cli": "^6.1.0",
    "go-ipfs": "^0.4.21",
    "jest": "^24.5.0",
    "jsonwebtoken": "^8.5.1",
    "truffle": "^5.0.8"
  }
}
